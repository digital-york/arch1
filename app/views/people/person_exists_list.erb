<div class="popup popup_subject">

  <div class="popup_title">Person Exists in Entry</div>

  <div><%= link_to 'Go back to search page', people_path(@go_back_id, :search_term => @search_term, :person_field => @person_field) %></div>

  <div style="margin-top: 10px">
    The person <strong><%= @person_name %></strong> exists in one or more entries. Please remove it from the records displayed below (using the main interface) and then click on this button:
  </div>

  <div style="margin-top: 5px">
    <%= button_to 'Refresh', person_path(id), :method => :delete, params: { :search_term => @search_term, :person_field => @person_field }, title: "Delete '#{@person_name}'" %>
  </div>

  <div style="clear: both"></div>

  <hr/>

  <div style="margin-top: 10px; margin-left: 0px">
    <% @existing_location_list.each do |t| %>
        <div style="margin-top: 5px">
          <%= link_to t[2], '#', :onclick => "window.opener.location.href='/entries?id=#{t[0]}&amp;folio_id=#{t[1]}&amp;set_folio=true'" %>
        </div>
    <% end %>
  </div>
</div>