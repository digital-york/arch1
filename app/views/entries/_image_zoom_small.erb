<% if session[:folio_id] != '' %>

    <div id="image_header" style='width: 300px'>

      <%
         terms = Terms.new('subauthority')
         folio_title = terms.get_str_from_id(session[:folio_id], 'title_tesim')
         folio_title = folio_title.gsub(/Abp Reg \d+ /, "")
      %>

      <%= folio_title %>

    </div>

    <div id="image_frame" style="text-align: center">

      <div id="location1" style="background-color: black"></div>

      <div id="image_footer">

        <div style="float: left; padding-left: 120px; padding-top: 6px">

          <% current_folio = session[:folio_id] %>

          <% if current_folio == session[:first_folio] %>
              <%= button_to "<", {}, :style => 'margin-right: 5px', :disabled => 'true' %>
          <% else %>
              <%= button_to "<", entries_path, :method => "get", params: {:small_zoom_action => 'prev_tesim'}, :style => 'margin-right: 5px', :title => 'previous image' %>
          <% end %>

          <% if current_folio == session[:last_folio] %>
              <%= button_to ">", {}, :disabled => 'true' %>
          <% else %>
              <%= button_to ">", entries_path, :method => "get", params: {:small_zoom_action => 'next_tesim'}, :title => 'next image' %>
          <% end %>
        </div>

        <div style="float: left; margin-left: 72px"><%= link_to image_tag("magnifying_glass.png", :alt => "register", :class => "icon", :style => "position: relative; top: 7px", :title => 'Image zoom'), "#", :onclick => "image_zoom_large_popup('/image_zoom_large'); return false", :title => "" %></div>

        <div style="clear: both"></div>
      </div>
    </div>

    <div style="clear: both"></div>

    <div style="width: 300px; margin-top: 20px; text-align: center">
      <em><%= link_to "Click here to browse folios", "#", :onclick => "browse_folios_popup('/browse_folios?is_popup=true'); return false" %></em>
    </div>
<% end %>

<script type="text/javascript">
    var viewer = OpenSeadragon({
        id: "location1",
        prefixUrl: "assets/seadragonImages/",
        autoResize: true,
        tileSources: "http://dlib.york.ac.uk/cgi-bin/iipsrv.fcgi?DeepZoom=<%= session[:folio_image] %>.dzi",
        showNavigationControl: false
    });
</script>
