<div id='main'>

  <% if session[:register_choice] == nil || session[:register_choice] == '' || session[:folio_choice] == nil || session[:folio_choice] == '' %>

      <!--<div class="bubble" style="margin-left: 40px; width: 260px; font-size: 1em; height: 30px">Please choose a Register and Folio</div>-->

  <% else %>

      <div id='left_frame'>
        <%= render 'image_zoom' %>
      </div>

      <div id='right_frame'>
	    <% if @entries.length == 0 %>
            <div style='float: left; width: 900px; font-size: 1.3em'>There are currently no entries for this folio -
              <%= link_to 'please click here to add a new one', new_entry_path, {:title => 'Create new entry'} %>.
            </div>
            <div style='clear: both'></div>
        <% else %>
            <div id='form'>

              <div class='tab1'>

                <table cellspacing='0'>

                  <%# Display tabs for entries %>
                  <tr class='noth'>
                    <th colspan='2' id='entry_menu'>
                      <ul>
                        <li style='margin-left: 5px'></li>
                        <% @entries.each do |entry| %>
                            <li>
                              <% if entry.id == @entry.id %>
                                <span class='highlight'>
                                  <span style='color: #9c6b17'>
                                    <%= entry.entry_no %>
                                  </span>
                                </span>
                              <% else %>
                                <span class='nohighlight'>
                                  <%= link_to entry.entry_no, entry_path(entry) %>
                                </span>
                              <% end %>
                            </li>
                        <% end %>
                        <li>
                          <span class='nohighlight'>
                          <%= link_to 'New Entry', new_entry_path, {:title => 'Create new entry'} %>
                          </span>
                        </li>
                      </ul>
                    </th>
                  </tr>

                  <%# Display Edit and Delete buttons %>
                  <tr>
                    <th colspan='2'>
                      <div id=''>
                        <span class='editButton'>
						  <%= button_to 'Edit', edit_entry_path(@entry), :method => :get, :class => 'buttonTo' %>
                          <%= button_to 'Delete', entry_path(@entry), :method => :delete, :class => 'buttonTo', :style => 'margin-left: 5px', :data => {:confirm => 'Are you sure you want to delete this entry?'} %>
						</span>
                      </div>
                    </th>
                  </tr>

                  <%# Entry No %>
                  <tr>
                    <th style='width: 150px'>Entry No*</th>
                    <td style='width: 750px'><%= @entry.entry_no %></td>
                  </tr>

                  <%# Editorial Note %>
                  <tr>
                    <th>Editorial Note</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.editorial_notes.count != 0 %>
                          <% @entry.editorial_notes.each do |editorial_note| %>
                              <div class='nested_single2'>
                                <%= editorial_note.editorial_note %>
                              </div>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Access Provided By %>
                  <tr>
                    <th>Access Provided By*</th>
                    <td><%= @entry.access_provided_by %>&nbsp;</td>
                  </tr>

                  <%# Entry Reference %>
                  <tr>
                    <th>Entry Reference</th>
                    <td class='tab2 backgroundGray'>
                      <table cellspacing='0'>
                        <tr>
                          <th>Document*</th>
                          <td><%= @entry.document %></td>
                        </tr>
                        <tr>
                          <th>Document Part</th>
                          <td><%= @entry.document_part %></td>
                        </tr>
                        <tr>
                          <th>Folio Type*</th>
                          <td><%= @entry.folio_type %></td>
                        </tr>
                        <tr>
                          <th>Folio Face*</th>
                          <td><%= @entry.folio_face_temp %></td>
                        </tr>
                        <tr>
                          <th>Entry Part</th>
                          <td><%= @entry.entry_part %></td>
                        </tr>
                      </table>
                    </td>
                  </tr>

                  <%# Format %>
                  <tr>
                    <th>Format</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.formats.count != 0 %>
                          <% @entry.formats.each do |format| %>
                              <div class='nested_single2'>
                                <%= format.format %>
                              </div>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Marginal Note %>
                  <tr>
                    <th>Marginal Note</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.marginal_notes.count != 0 %>
                          <% @entry.marginal_notes.each do |marginal_note| %>
                              <div class='nested_single2'>
                                <%= marginal_note.marginal_note %>
                              </div>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Is Referenced By %>
                  <tr>
                    <th>Is Referenced By</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.is_referenced_bies.count != 0 %>
                          <% @entry.is_referenced_bies.each do |is_referenced_by| %>
                              <div class='nested_single2'>
                                <%= is_referenced_by.is_referenced_by %>
                              </div>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Language %>
                  <tr>
                    <th>Language</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.languages.count != 0 %>
                          <% @entry.languages.each do |language| %>
                              <div class='nested_single2'>
                                <%= language.language %>
                              </div>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Note %>
                  <tr>
                    <th>Note</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.notes.count != 0 %>
                          <% @entry.notes.each do |note| %>
                              <div class='nested_single2'>
                                <%= note.note %>
                              </div>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Date %>
                  <tr>
                    <th>Date</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.entry_dates.count != 0 %>
                          <% @entry.entry_dates.each do |entry_date| %>
                              <table cellspacing='0'>
                                <tr>
                                  <th>Date Type*</th>
                                  <td><%= entry_date.date_type %></td>
                                </tr>
                                <tr>
                                  <th>Date as Written*</th>
                                  <td><%= entry_date.date_as_written %></td>
                                </tr>
                                <tr>
                                  <th>Date Span*</th>
                                  <td><%= entry_date.date_span %></td>
                                </tr>
                                <tr>
                                  <th>Date Certainty</th>
                                  <td><%= entry_date.date_certainty %></td>
                                </tr>
                                <tr>
                                  <th>Date*</th>
                                  <td><%= entry_date.date %></td>
                                </tr>
                                <tr>
                                  <th>Note</th>
                                  <td><%= entry_date.note %></td>
                                </tr>
                              </table>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Person %>
                  <tr>
                    <th>Person</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.people.count != 0 %>
                          <% @entry.people.each do |person| %>
                              <table cellspacing='0'>
                                <tr>
                                  <th>Name As Written*</th>
                                  <td>
                                    <% if person.name_as_writtens.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='name_as_writtens'>
                                              <div id='addNameAsWrittens'>
                                                <% person.name_as_writtens.each do |name_as_written| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= name_as_written.name_as_written %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>
                                <tr>
                                  <th>Role Name</th>
                                  <td>
                                    <% if person.role_names.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='role_names'>
                                              <div id='addRoleNames'>
                                                <% person.role_names.each do |role_name| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= role_name.role_name %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>
                                <tr>
                                  <th>Note</th>
                                  <td><%= person.note %></td>
                                </tr>
                                <tr>
                                  <th>Age</th>
                                  <td><%= person.age %></td>
                                </tr>
                                <tr>
                                  <th>Gender</th>
                                  <td><%= person.gender %></td>
                                </tr>
                                <tr>
                                  <th>Name Authority*</th>
                                  <td><%= person.name_authority %></td>
                                </tr>
                                <tr>
                                  <th>Occupation</th>
                                  <td>
                                    <% if person.occupations.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='occupations'>
                                              <div id='addOccupations'>
                                                <% person.occupations.each do |occupation| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= occupation.occupation_name %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>
                                <tr>
                                  <th>Status</th>
                                  <td>
                                    <% if person.statuses.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='statuses'>
                                              <div id='addStatuses'>
                                                <% person.statuses.each do |status| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= status.status_name %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>
                                <tr>
                                  <th>Qualification</th>
                                  <td>
                                    <% if person.qualifications.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='qualifications'>
                                              <div id='addQualifications'>
                                                <% person.qualifications.each do |qualification| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= qualification.qualification_name %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>
                              </table>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Place %>
                  <tr>
                    <th>Place</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.places.count != 0 %>
                          <% @entry.places.each do |place| %>
                              <table cellspacing='0'>

                                <tr>
                                  <th>Place As Written*</th>
                                  <td>
                                    <% if place.place_as_writtens.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='place_as_writtens'>
                                              <div id='addPlaceAsWrittens'>
                                                <% place.place_as_writtens.each do |place_as_written| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= place_as_written.place_as_written %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>

                                <tr>
                                  <th>Additional Type</th>
                                  <td>
                                    <% if place.place_additional_types.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='place_additoinal_types'>
                                              <div id='addPlaceAdditionalTypes'>
                                                <% place.place_additional_types.each do |place_additional_type| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= place_additional_type.additional_type %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>

                                <tr>
                                  <th>Place Authority*</th>
                                  <td><%= place.place_authority %></td>
                                </tr>

                                <tr>
                                  <th>Note</th>
                                  <td>
                                    <% if place.place_notes.count != 0 %>
                                        <table cellspacing='0' class='tab3'>
                                          <tr>
                                            <td id='place_notes'>
                                              <div id='addPlaceNotes'>
                                                <% place.place_notes.each do |place_note| %>
                                                    <div class='nested_single2 backgroundGray'>
                                                      <%= place_note.place_note %>
                                                    </div>
                                                <% end %>
                                                <div style='clear: both'></div>
                                              </div>
                                            </td>
                                          </tr>
                                        </table>
                                    <% end %>
                                  </td>
                                </tr>
                              </table>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

                  <%# Subject %>
                  <tr>
                    <th>Subject</th>
                    <td class='tab2 backgroundGray'>
                      <% if @entry.subjects.count != 0 %>
                          <% @entry.subjects.each do |subject| %>
                              <div class='nested_single2'>
                                <%= subject.subject %>
                              </div>
                          <% end %>
                      <% else %>
                          &nbsp;
                      <% end %>
                    </td>
                  </tr>

				  <%# Display Edit and Delete buttons %>
                  <tr>
                    <th colspan='2'>
                      <div id=''>
                        <span class='editButton'>
						  <%= button_to 'Edit', edit_entry_path(@entry), :method => :get, :class => 'buttonTo' %>
                          <%= button_to 'Delete', entry_path(@entry), :method => :delete, :class => 'buttonTo', :style => 'margin-left: 5px', :data => {:confirm => 'Are you sure you want to delete this entry?'} %>
						</span>
                      </div>
                    </th>
                  </tr>
                </table>
              </div>
            </div>
        <% end %>
        <div style='clear: both'></div>
      </div>
      <div style='clear: both'></div>
  <% end %>
</div>


