<div class="popup popup_subject">

  <div class="popup_title">Subject exists in one or more entries</div>

  <div style="margin-top: 10px">The subject '<strong><%= @subject %></strong>' exists in one or more entries.
    Please remove it from the records displayed below (using the main interface)
    <%= link_to 'then click here to go back and delete the subject', subject_path(@go_back_id), title: 'Go back' %>.
  </div>

  <hr style="margin: 10px 0px"/>

  <div style="margin-top: 10px">
    <% @delete_list.each_with_index do |t| %>
        <em><%= t %></em>
        <br/>
    <% end %>
  </div>
</div>