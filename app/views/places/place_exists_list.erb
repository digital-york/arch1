<div class="popup popup_subject">

  <div class="popup_title">'<%= @place_name %>'</div>

  <div><%= link_to 'Go back to search page', places_path(@go_back_id, :search_term => @search_term, :place_field => @place_field) %></div>

  <div style="margin-top: 10px">
    The place '<%= @place_name %>' exists in one or more entries. Please remove it from the records displayed below (using the main interface) and then click on this button:
  </div>

  <div style="margin-top: 5px">
    <%= button_to 'Delete', place_path(id), :method => :delete, params: { :search_term => @search_term, :place_field => @place_field }, title: "Delete '#{@place_name}'" %>
  </div>

  <div style="clear: both"></div>

  <hr/>

  <div style="margin-top: 10px; margin-left: 0px">
    <% @existing_location_list.each do |t| %>
        <div style="margin-top: 5px"><%= t %></div>
    <% end %>
  </div>
</div>