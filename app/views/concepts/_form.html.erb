
<div class="popup" style="min-height: 500px">

  <%
    if @concept.new_record?
      text = 'Add'
    else
      text = 'Edit'
    end
    type = capitalize_first_letter(session[:concept_list_type])
  %>

  <div class="popup_breadcrumb">
    <%= link_to 'Admin', admins_path %> &gt; <%= link_to "#{type} List", concepts_path %> &gt; <%= text %> <%= type %>
  </div>

  <div class="popup_title">
  <% if @concept.new_record? %>
      Add <%= capitalize_first_letter(session[:concept_list_type]) %>
  <% else %>
      Edit <%= capitalize_first_letter(session[:concept_list_type]) %>
  <% end %>
  </div>

  <% if @concept_name != nil && @concept_name != '' %>
      <div id="popup_info" class="popup_info" style="display: none; text-align: center">
        '<%= @concept_name %>'
        <% if @concept.new_record? %>
           has been added
        <% else %>
           has been updated
        <% end %>
      </div>
  <% end %>

  <% if @error != nil && @error != '' %>
      <div class="popup_error"><%= @error.html_safe %></div>
  <% end %>

  <%
     if @concept.new_record?
       form_url = 'concepts_path(@concept)'
       form_method = ':post'
     else
       form_url = 'concept_path(@concept)'
       form_method = ':patch'
     end
  %>

  <%= form_for @concept, url: eval(form_url), method: eval(form_method), html: {style: 'margin-top: 15px; margin-bottom: 0px'} do |f| %>

      <div class='tab1'>

        <table cellspacing="0" style="width: 100%; font-size: 0.95em">

          <%# Label %>
          <tr>
            <th style="width: 150px">*Label:</th>
            <td>
              <%= text_field_tag "concept[preflabel]", @concept.preflabel %>
            </td>
          </tr>

          <%# Alternate Label %>
          <tr>
            <th>
              Alternate Label:
              <img src="/assets/plus_sign.png" alt="plus icon" class="plus_icon click_popup_multiple_field_button" jq_type_1='concept' jq_type_2="altlabel"/>
            </th>
            <td>
              <div class="field_group">
                <% @concept.altlabel.each do |altlabel| %>
                    <div class="field_single">
                      <%= text_field_tag 'concept[altlabel][]', altlabel %>
                      <img alt="Delete icon" src="/assets/delete.png" class="delete_icon click_remove_field_level1" jq_tag_type="input">
                    </div>
                <% end %>
              </div>
            </td>
          </tr>

          <%# Description %>
          <tr>
            <th>Description:</th>
            <td>
              <%= text_field_tag "concept[description]", @concept.description %>
            </td>
          </tr>

        </table>

        <%# Submit %>
        <p style="margin-top: 10px">
          <% if @concept.new_record? %>
              <%= f.submit 'Submit' %>
          <% else %>
              <%= f.submit 'Update' %>
          <% end %>
        </p>

      </div>

      <div style="clear: both"></div>

  <% end %>

</div>
