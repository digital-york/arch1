
<div class="popup popup_subject">

  <div class="popup_title">'<%= @concept_name %>'</div>

  <div><%= link_to 'Go back to search page', concepts_path(@go_back_id, :search_term => @search_term, :list_type => @list_type) %></div>

  <div style="margin-top: 10px">
    The concept '<%= @concept_name %>' exists in one or more entries. Please remove it from the records displayed below (using the main interface) and then click on this button:
  </div>

  <div style="margin-top: 5px">
    <%= button_to 'Delete', concept_path(id), :method => :delete, params: { :search_term => @search_term, :list_type => @list_type }, title: "Delete '#{@concept_name}'" %>
  </div>

  <div style="clear: both"></div>

  <hr/>

  <div style="margin-top: 10px; margin-left: 0px">
    <% @existing_location_list.each do |t| %>
        <div style="margin-top: 5px"><%= t %></div>
    <% end %>
  </div>
</div>